/*   分隔线样式   */
.blank {
    width: 100%;
    height: 20rpx;
    background:#f4f4f4;
    
}


.medium_box {
    width: 97%;
    padding: 20rpx 0;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
    border-radius: 30rpx;
    border-style: solid;
    border-color:white;
    background-color: #eeeeee;
    margin:10rpx auto;
    
    
}
.mine_icon{
    width: 160rpx;
    height: 160rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;  
}

.mine_icon view {
    font-size: 26rpx;
    padding-top: 20rpx;
}

.mine_icon image {
    width: 60rpx;
    height: 60rpx;
}





.list_box {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.list_poster {
  width: 230rpx;
  height: 230rpx;
}

.list_content {
  height: 230rpx;
  width: calc(100% - 230rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.list_word {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

.list_title {
  width: 100%;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  line-height: 45rpx;
}

.list_author {
  padding-top: 10rpx;
  width: 100%;
  font-size: 27rpx;
  letter-spacing: 3rpx;
  line-height: 40rpx;
  color: rgb(129, 129, 129);
}

.list_between {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.list_price {
  font-size: 36rpx;
  color: rgb(255, 0, 0);
}

.list_time {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgb(129, 129, 129);
}

.nocontent {
  width: 100%;
  height: calc(100% - 400rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}